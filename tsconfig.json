{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "es2024",
      "dom"
    ],
    "allowJs": true,
    "checkJs": true,
    "noEmit": false,
    "declaration": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "outDir": "lib",
  },
  "include": [
    "src"
  ]
}